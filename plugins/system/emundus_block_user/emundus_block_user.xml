<?xml version="1.0" encoding="utf-8"?>
<extension version="4" type="plugin" group="system">
	<name>System - eMundus Redirect user if block</name>
	<author>eMundus</author>
	<creationDate>Septembre 2020</creationDate>
	<copyright>Copyright (C) 2016 eMundus</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>admin@emundus.fr</authorEmail>
	<authorUrl>www.emundus.fr</authorUrl>
	<version>2.0.0</version>
	<description>Redirect user if he is block</description>
	<files>
		<filename>emundus_block_user.xml</filename>
		<filename plugin="emundus_block_user">emundus_block_user.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_emundus_block_user.ini</language>
		<language tag="fr-FR">fr-FR.plg_system_emundus_block_user.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="activation_redirect" default="" label="Redirect after activation." description="The URL to go to on successful activation." />
			</fieldset>
		</fields>
	</config>
</extension>