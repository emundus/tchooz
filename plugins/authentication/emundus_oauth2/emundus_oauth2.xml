<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="authentication">
    <name>Authentication - eMundus OAuth 2 Connect</name>
    <author>Hugo Moracchini, HUBINET Brice</author>
    <creationDate>July 2022</creationDate>
    <copyright>(C) 2022 eMundus All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>dev@emundus.fr</authorEmail>
    <authorUrl>emundus.fr</authorUrl>
    <version>2.0.0</version>
    <description>PLG_AUTHENTICATION_EMUNDUS_OAUTH2_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Plugin\Authentication\EmundusOauth2</namespace>
    <files>
        <filename>emundus_oauth2.xml</filename>
        <folder plugin="emundus_oauth2">services</folder>
        <folder>src</folder>
        <filename>index.html</filename>
        <folder>language</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_authentication_emundus_oauth2.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_authentication_emundus_oauth2.sys.ini</language>
        <language tag="fr-FR">language/fr-FR/fr-FR.plg_authentication_emundus_oauth2.ini</language>
        <language tag="fr-Fr">language/fr-FR/fr-FR.plg_authentication_emundus_oauth2.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="well_known_url" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_WELL_KNWON_LABEL"/>

                <field name="type" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TYPE_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TYPE_DESC"/>
                <field name="client_id" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTID_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTID_DESC"/>
                <field name="client_secret" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTSECRET_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTSECRET_DESC"/>
                <field name="scopes" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SCOPES_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SCOPES_DESC" default="openid"/>
                <field name="auth_url" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_AUTHURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_AUTHURL_DESC"/>
                <field name="token_url" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TOKENURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TOKENURL_DESC"/>
                <field name="redirect_url" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_REDIRECTURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_REDIRECTURL_DESC"/>
                <field name="sso_account_url" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_ACCOUNT_URL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_ACCOUNT_URL_DESC"/>
                <field name="emundus_profile" type="text"
                       label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_PROFILE_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_PROFILE_DESC"/>
                <field name="email_id" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_EMAIL_ID_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_EMAIL_ID_DESC"/>
                <field name="logout_url" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_LOGOUTURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_LOGOUTURL_DESC"/>
                <field name="platform_redirect_url" type="text" label="URL de redirection plateforme" description=""/>

                <field name="attributes"
                       type="subform"
                       icon="list"
                       description=""
                       label="Attributs"
                       multiple="true"
                       filter="raw"
                       layout="joomla.form.field.subform.repeatable-table"
                >
                    <form>
                        <field name="table_name"
                               type="text"
                               default="jos_users"
                               label="Table" description=""/>

                        <field name="column_name"
                               type="text"
                               default=""
                               label="Colonne à compléter" description=""/>

                        <field showon="table_name!:jos_users"
                               name="column_join_user_id"
                               type="text"
                               default=""
                               label="Colonne Identifiant utilisateur" description=""/>

                        <field name="attribute_name"
                               type="text"
                               default=""
                               label="Nom de l'attribut OpenID"
                               description="">
                        </field>
                    </form>

                </field>
                <field name="debug_mode"
                       type="radio"
                       default="0"
                       label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_DEBUG_MODE"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_DEBUG_MODE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>

            <fieldset name="second_config" label="Autre configuration">
                <field name="second_config_header" type="note" class="alert alert-info"
                       label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SECOND_CONFIG_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SECOND_CONFIG_DESC"/>
                <field name="type_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TYPE_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TYPE_DESC"/>
                <field name="client_id_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTID_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTID_DESC"/>
                <field name="client_secret_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTSECRET_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_CLIENTSECRET_DESC"/>
                <field name="scopes_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SCOPES_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_SCOPES_DESC" default="openid"/>
                <field name="auth_url_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_AUTHURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_AUTHURL_DESC"/>
                <field name="token_url_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TOKENURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_TOKENURL_DESC"/>
                <field name="redirect_url_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_REDIRECTURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_REDIRECTURL_DESC"/>
                <field name="sso_account_url_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_ACCOUNT_URL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_ACCOUNT_URL_DESC"/>
                <field name="emundus_profile_2" type="text"
                       label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_PROFILE_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_PROFILE_DESC"/>
                <field name="email_id_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_EMAIL_ID_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_EMUNDUS_EMAIL_ID_DESC"/>
                <field name="logout_url_2" type="text" label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_LOGOUTURL_LABEL"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_LOGOUTURL_DESC"/>
                <field name="platform_redirect_url_2" type="text" label="URL de redirection plateforme" description=""/>

                <field name="attributes_2"
                       type="subform"
                       icon="list"
                       description=""
                       label="Attributs"
                       multiple="true"
                       filter="raw"
                       layout="joomla.form.field.subform.repeatable-table"
                >
                    <form>
                        <field name="table_name"
                               type="text"
                               default="jos_users"
                               label="Table" description=""/>

                        <field name="column_name"
                               type="text"
                               default=""
                               label="Colonne à compléter" description=""/>

                        <field showon="table_name!:jos_users"
                               name="column_join_user_id"
                               type="text"
                               default=""
                               label="Colonne Identifiant utilisateur" description=""/>

                        <field name="attribute_name"
                               type="text"
                               default=""
                               label="Nom de l'attribut OpenID"
                               description="">
                        </field>
                    </form>

                </field>
                <field name="debug_mode_2"
                       type="radio"
                       default="0"
                       label="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_DEBUG_MODE"
                       description="PLG_AUTHENTICATION_EMUNDUS_OAUTH2_DEBUG_MODE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
