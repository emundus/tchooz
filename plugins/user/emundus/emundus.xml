<?xml version="1.0" encoding="utf-8"?>
<extension method="upgrade" type="plugin" group="user">
	<name>PLG_USER_EMUNDUS</name>
	<author>eMundus</author>
	<creationDate>December 2006</creationDate>
	<copyright>(C) 2005 - 2009 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>dev@emundus.fr</authorEmail>
	<authorUrl>www.emundus.fr</authorUrl>
	<version>2.0.0</version>
	<description>PLG_USER_JOOMLA_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Plugin\User\Emundus</namespace>
	<files>
		<folder plugin="emundus">services</folder>
		<folder>src</folder>
	</files>
	<languages>
		<language tag="fr-FR">language/fr-FR/plg_user_emundus.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_user_emundus.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="send_email_delete"
						type="list"
						default="1"
						label="Send email at delete"
						description="Send email to user when his account is delete">
					<option
							value="0">JNo</option>
					<option
							value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>