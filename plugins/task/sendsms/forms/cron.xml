<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fields name="params">
        <fieldset name="task_params">
            <field
                    type="list"
                    name="service"
                    label="PLG_TASK_SMS_FIELD_SERVICE_LABEL"
                    description="PLG_TASK_SMS_FIELD_SERVICE_DESC"
                    default="ovh"
            >
                <option value="ovh">PLG_TASK_SMS_FIELD_SERVICE_OVH</option>
            </field>
            <field
                    type="integer"
                    name="limit"
                    label="PLG_TASK_SMS_FIELD_LIMIT_LABEL"
                    description="PLG_TASK_SMS_FIELD_LIMIT_DESC"
                    default="500"
                    step="100"
                    first="100"
                    last="1500"
            />
            <field
                    type="integer"
                    name="max_attempts"
                    label="PLG_TASK_SMS_FIELD_MAX_ATTEMPTS_LABEL"
                    description="PLG_TASK_SMS_FIELD_MAX_ATTEMPTS_DESC"
                    default="3"
                    step="1"
                    first="1"
                    last="10"
            />
            <field
                name="debug"
                type="checkbox"
                label="PLG_TASK_SMS_FIELD_DEBUG_LABEL"
                description="PLG_TASK_SMS_FIELD_DEBUG_DESC"
                default="1"
            />
        </fieldset>
    </fields>
</form>